<layout>

    <composite x="16" y="650" name="altitude">
        <component type="metric_unit" x="70" y="0" metric="alt" units="alt" size="16">ALT({:~C})</component>
        <component type="icon" x="0" y="0" file="mountain.png" size="64"/>
        <component type="metric" x="70" y="18" metric="alt" units="alt" dp="1" size="32" />
    </composite>

    <composite x="220" y="650" name="gradient">
        <component type="text" x="70" y="0" size="16">SLOPE(%)</component>
        <component type="icon" x="0" y="0" file="slope-triangle.png" size="64"/>
        <component type="metric" x="70" y="18" metric="gradient" dp="1" size="32" />
    </composite>

    <component type="chart" name="gradient_chart" x="400" y="650"/>

    <composite x="800" y="650" name="mph">
        <component type="metric_unit" metric="speed" units="speed" size="16">{:~c}</component>
        <component type="metric" x="0" y="0" metric="speed" units="speed" dp="0" size="64" />
    </composite>

    <component type="journey_map" name="journey_map" x="10" y="10" size="256" corner_radius="35" opacity="1.0" />
    <component type="moving_map" name="moving_map" x="1000" y="10" size="256" zoom="18" corner_radius="35" opacity="1.0" />
</layout>
